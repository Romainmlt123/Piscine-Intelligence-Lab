# Voice Agent Environment Configuration
# Copy this file to .env and customize

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8001

# LLM Models (Ollama)
LLM_MODEL_MATH=qwen2.5:1.5b
LLM_MODEL_PHYSICS=llama3.2:1b
LLM_MODEL_ENGLISH=gemma:2b
LLM_MODEL_GENERAL=qwen2.5:1.5b

# Whisper STT
WHISPER_MODEL=base

# VAD Settings
VAD_AGGRESSIVENESS=2
VAD_PADDING_MS=600

# Sentence Buffer (streaming)
SENTENCE_BUFFER_MIN_CHARS=5
SENTENCE_BUFFER_MAX_CHARS=50
